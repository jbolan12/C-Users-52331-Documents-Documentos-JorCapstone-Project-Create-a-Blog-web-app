<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bleeter Main Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles.css">



</head>
<body>
    <div class="content">
    <div class="header">
        <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                <i class="bi bi-currency-bitcoin" style="font-size: 2rem; color: white;"></i>
                <span class="fs-4">Bleeter</span>
            </a>

        </header>
    </div>
    
        
        <div class="container">
            <a href="/new" class="btn-custom">Create a New Post</a>
            <% posts.forEach((post, index) => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <form action="/delete/<%= index %>" method="POST" style="display: inline;">
                    <button type="submit" class="btn-delete">Delete</button>
                </form>
                <a href="/edit/<%= index %>" class="btn-custom">Edit</a>
            </div>
        <% }); %>
    </div>
</div>

    <div class="a-divider"></div>
    
    <div class="footer">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-2 my-2 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                    <i class="bi bi-currency-bitcoin" style="font-size: 2rem; color: white;"></i>
                </a>
                <span class="mb-3 mb-md-0 text-body-secondary">Copyright Â©Stratton Oaks, Inc <%= new Date().getFullYear() %></span>
            </div>
            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="ms-3"><a class="text-body-secondary" href="/"><i class="bi bi-twitter"></i></a></li>
                <li class="ms-3"><a class="text-body-secondary" href="https://www.instagram.com/danbond583/"><i class="bi bi-instagram"></i></a></li>
                <li class="ms-3"><a class="text-body-secondary" href="https://www.facebook.com/profile.php?id=100005393806123"><i class="bi bi-facebook"></i></a></li>
            </ul>
        </footer>
    </div>
    
    </div>
    

</body>
</html>
